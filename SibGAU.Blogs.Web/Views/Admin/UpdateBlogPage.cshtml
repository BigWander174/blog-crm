@model GetBlogDto

<!DOCTYPE html>

<html>
<head>
    <title>Change blog</title>
</head>
<body>
    <div>
        <form asp-controller="Admin" asp-action="UpdateBlog" asp-route-blogId="@Model.Id" method="post">
            <label asp-for="Title"> Title </label>
            <input type="text" asp-for="Title" value="@Model.Title"/>
            <br>
            <label asp-for="Content"> Content </label>
            <input type="text" asp-for="Content"  value="@Model.Content"/>
            <br>
            <input type="submit" value="Update"/>
        </form>
        <form asp-controller="Admin" asp-action="DeleteBlog" method="post" asp-route-blogId="@Model.Id">
            <input type="submit" value="Delete" />
        </form>
    </div>
</body>
</html>